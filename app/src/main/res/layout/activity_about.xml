<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white"
    tools:context=".About">

    <!-- Profile Section -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="111dp"
        android:layout_marginBottom="24dp"
        android:background="@color/material_dynamic_primary40">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="16dp"
            android:contentDescription="Profile Image"
            android:src="@drawable/profile_image" />

        <TextView
            android:id="@+id/name_text"
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="37dp"
            android:layout_marginTop="25dp"
            android:layout_toEndOf="@id/profile_image"
            android:background="@drawable/rounded_textview_background"
            android:padding="8dp"
            android:text="Madhav Kumar"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <!-- Description Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="124dp"
        android:lineSpacingExtra="2dp"
        android:text="@string/bio_about"
        android:textAlignment="center"
        android:textStyle="italic"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <!-- Additional Info Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Interests:-"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/intrest_content"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address :-"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="4dp" />

    <TextView
        android:layout_width="234dp"
        android:layout_height="153dp"
        android:layout_marginTop="10dp"
        android:text="@string/address_pf"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <!-- Title for Contact Information -->

    <!-- Mobile Number -->
    <TextView
        android:id="@+id/contact_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Contact Information:-"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/mobile_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Mobile Number: +91 8936845963"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <!-- Email -->
    <TextView
        android:id="@+id/email_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/email"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/signature"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:paddingTop="20dp"
        android:padding="15dp"
        android:text="Â© 2024 Madhav Kumar. All rights reserved."
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="italic"
     />

</LinearLayout>

