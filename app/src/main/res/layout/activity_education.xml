<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Education">

    <!-- Title -->
    <TextView
        android:id="@+id/educationTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EDUCATION"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@android:color/holo_blue_dark"
        android:textAlignment="center"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Divider -->
    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@id/educationTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Bachelor of Technology -->
    <TextView
        android:id="@+id/bachelorTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bachelor of Technology"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/educationTitle"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="12dp" />

    <TextView
        android:id="@+id/bachelorDetails"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/btech"
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/bachelorTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="12dp" />

    <!-- Divider -->
    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@id/bachelorDetails"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Intermediate -->
    <TextView
        android:id="@+id/intermediateTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Intermediate"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/bachelorDetails"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="12dp" />

    <TextView
        android:id="@+id/intermediateDetails"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="K.S.R.I. College Sarai Ranjan, Samastipur, Bihar\n2018 - 2020"
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/intermediateTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="12dp" />

    <!-- Divider -->
    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@id/intermediateDetails"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Matriculation -->
    <TextView
        android:id="@+id/matriculationTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Matriculation"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/intermediateDetails"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="12dp" />

    <TextView
        android:id="@+id/matriculationDetails"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="M.A.B.R. Jha School Bhadura, Samastipur, Bihar\n2018"
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/matriculationTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="12dp" />


    <TextView
        android:id="@+id/signature"
        android:layout_width="280dp"
        android:layout_height="45dp"
        android:padding="16dp"
        android:text="Â© 2024 Madhav Kumar. All rights reserved."
        android:textAlignment="center"
        android:textColor="@color/black"
        android:background="@color/white"
        android:textSize="12sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
