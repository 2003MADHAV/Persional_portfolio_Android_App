<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="OnlineInternship">

    <!-- Title -->
    <TextView
        android:id="@+id/internshipTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ONLINE INTERNSHIP"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@android:color/holo_blue_dark"
        android:textAlignment="center"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Internship List -->

    <LinearLayout
        android:id="@+id/internshipList"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/internshipTitle">

        <!-- Python with AIML -->
        <TextView
            android:id="@+id/pythonAIML"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="• Python with AIML"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <!-- Cloud Computing on Microsoft Azure -->
        <TextView
            android:id="@+id/cloudComputingAzure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="• Cloud Computing on Microsoft Azure"
            android:textColor="@color/black"
            android:textSize="18sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="0dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="216dp">

            <TextView
                android:id="@+id/NPTLpTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/holo_blue_dark"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:text="NPTL COURSES"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="26sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/course_air_pollution"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=". Air Pollution and Control"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:padding="8dp" />

            <TextView
                android:id="@+id/course_ecology_society"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=". Ecology and Society"
                android:textSize="18sp"
                android:textColor="#000000"
                android:padding="8dp" />

            <TextView
                android:id="@+id/course_wildlife_ecology"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=". Wildlife Ecology"
                android:textSize="18sp"
                android:textColor="#000000"
                android:padding="8dp" />

            <TextView
                android:id="@+id/course_soft_skill_development"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=". Soft Skill Development"
                android:textSize="18sp"
                android:textColor="#000000"
                android:padding="8dp" />

            <TextView
                android:id="@+id/course_soft_skills"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=". Soft Skills"
                android:textSize="18sp"
                android:textColor="#000000"
                android:padding="8dp" />

        </LinearLayout>

    </LinearLayout>




    <TextView
        android:id="@+id/signature"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:padding="15dp"
        android:text="© 2024 Madhav Kumar. All rights reserved."
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>
